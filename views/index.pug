extends layout

block header
  div(class="bg-inherit pt-10 pb-6 px-6")
    h1 skeleton
  //to-r, gradient 'to right', in that direction
  div(class="h-1.5 bg-gradient-to-r from-indigo-600 to-rose-600")

block content
  div(class="m-10")
    div(class="flex flex-wrap w-full p-4 border-solid border-2 border-white")
      //sm applies to elements w min width of 640px-- could be smaller
      div(class="w-full sm:w-3/5")
        img(src="/images/engraving_mirrored.jpg" alt="Da Vinci Drawing / Bartolozzi Engraving")
        //might later be possible to have the full mirrored image up, and
        //the caption would just cover the lower part of it?
        img(src="/images/engraving_caption.jpg" alt="Bartolozzi Caption")
        img(src="/images/target.png" id="target-1" alt="Target Marker 1")
        img(src="/images/target.png" id="target-2" alt="Target Marker 2")
        img(src="/images/target.png" id="target-3" alt="Target Marker 3")
        img(src="/images/target.png" id="target-4" alt="Target Marker 4")
        img(src="/images/target.png" id="target-5" alt="Target Marker 5")
        img(src="/images/target.png" id="target-6" alt="Target Marker 6")
      div(class="w-full sm:w-2/5 p-8")
        div(class="flex justify-center") 
          h1 Femur
    h1(class="text-3xl font-bold underline") ayayayay #{title}
    h2(class="font-serif") ayayayayay
    h2(class="hover:animate-bounce mt-10") Does he know?
    p Welcome to #{title}
